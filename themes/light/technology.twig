{% include 'incl/header.twig' %}
<body>
{% include 'incl/nav.twig' %}
<div class="main" role="main">
{% for page in pages("technologies/technology") %}
{% if page.id==current_page.id %}<h1> {{page.title}} </h1>{% endif %}
{% endfor %}
{% if meta.Sidebar%}

<div class="technology">
    <div class="sidemenu">
        <ul>
        {% for page in pages("technologies/technology") if page.title and not page.hidden %}
        <li{% if page.id==current_page.id %} class="active" {% endif %}><a href="{{ page.url }}">{{ page.title }}</a></li>
        {% endfor %}
        </ul>
    </div>
<article>
    {{ content}}
</article>
    </div>
</div>
{% else %}
    <div class="technologies">
        {{content}}
    </div>
{% endif%}   
{% include 'incl/footer.twig' %}
</body>
</html>
